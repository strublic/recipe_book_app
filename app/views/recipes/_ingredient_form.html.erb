<div class="nested-form-wrapper card-header" data-new-record="<%= f.object.new_record? %>">
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label for="name">Ingrediente</label>
            <%= f.text_field :name, class: "form-control", placeholder: "Ingrediente", required: true %>
        </div>

        <div class="col-md-2 mb-3">
            <label for="measure">Medida</label>
            <%= f.number_field :measure, class: "form-control", min: 0, placeholder: "Medida", required: true %>
        </div>

        <div class="col-md-4 mb-3">
            <label for="measure_type">Tipo de medida</label>
            <%= f.text_field :measure_type, class: "form-control", placeholder: "Tipo de medida", required: true %>
        </div>

        <div class="col-md-2 mb-3">
            <button type="button", class="btn btn-danger btn-bottom", title="Remover" data-action="nested-form#remove">X</button>
            <%= f.hidden_field :_destroy %>
        </div>
    </div>
</div>