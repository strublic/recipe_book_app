<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Ingrediente", required: true %>
    <%= f.label :measure %>
    <%= f.text_field :measure, placeholder: "Medida", required: true %>
    <%= f.label :measure_type %>
    <%= f.text_field :measure_type, placeholder: "Tipo de medida", required: true %>
    <button type="button" data-action="nested-form#remove">Remover item</button>
    <%= f.hidden_field :_destroy %>
</div>