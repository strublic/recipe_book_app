<div class="nested-form-wrapper card-header" data-new-record="<%= f.object.new_record? %>">
    <div class="form-row">
        <div class="col-md-10 mb-3">
            <label for="name">Etapa</label>
            <%= f.text_field :step, class: "form-control", placeholder: "Etapa", required: true %>
        </div>

        <div class="col-md-2 mb-3">
            <button type="button", class="btn btn-danger btn-bottom", title="Remover" data-action="nested-forms#remove">X</button>
            <%= f.hidden_field :_destroy %>
        </div>
    </div>
</div>